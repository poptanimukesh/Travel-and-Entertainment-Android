<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="6dip">

    <ImageView
        android:id="@+id/authorImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:contentDescription="TODO"
        android:foregroundGravity="center_vertical|center"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/authorRating"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/authorRating"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textColor="#00aa8d"
        android:textSize="16sp" />

    <RatingBar
        android:id="@+id/authorRating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorName"
        android:layout_toEndOf="@+id/authorImage"
        android:layout_toRightOf="@+id/authorImage"
        android:numStars="5"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/authorDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorRating"
        android:layout_toEndOf="@+id/authorImage"
        android:layout_toRightOf="@+id/authorImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/authorComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorDate"
        android:layout_toEndOf="@+id/authorImage"
        android:layout_toRightOf="@+id/authorImage"
        android:text="TextView" />

</RelativeLayout>